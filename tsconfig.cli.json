{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2020",
    "outDir": "./scripts",
    "rootDir": "./scripts",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "noEmit": false
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["scripts/**/*.js", "scripts/**/*.test.ts"]
}
