{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "stubs/**/*.ts",
    "pages/**/*.ts",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "*.ts",
    "vite-env.d.ts",
    "vitest-env.d.ts"
  ]
}
