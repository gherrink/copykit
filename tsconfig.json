{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["stubs/*"],
      "@test/*": ["test/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.cli.json" },
    { "path": "./tsconfig.eslint.json" }
  ],
  "files": []
}
